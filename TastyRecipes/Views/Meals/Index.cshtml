@model IEnumerable<TastyRecipes.Models.Recipes.Meals>

@{
    ViewData["Title"] = "Meals";
}

<h1>Meals</h1>

<p
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MealsName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MealsName)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.MealsId">Details</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
